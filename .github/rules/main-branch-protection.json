{
    "rules": [
        {
            "type": "branch",
            "name": "Personal Website Protection",
            "enforcement": "active",
            "conditions": {
                "refs": ["refs/heads/main"]
            },
            "rules": {
                "creation": false,
                "deletion": false,
                "update": {
                    "required_status_checks": [
                        {
                            "context": "CodeQL",
                            "integration_id": "github-code-scanning"
                        },
                        {
                            "context": "CI/CD"
                        }
                    ],
                    "required_signatures": true,
                    "required_linear_history": true,
                    "required_deployments": ["github-pages"],
                    "pull_request": {
                        "dismiss_stale_reviews": true,
                        "require_code_owner_reviews": true,
                        "required_approving_review_count": 1
                    }
                }
            },
            "bypass": {
                "users": ["DoubledDoge"],
                "apps": []
            }
        }
    ]
}
